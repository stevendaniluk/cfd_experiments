FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0";
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

#include        "$FOAM_CASE/include/initialConditions"

internalField   uniform $pressure;

boundaryField
{
    // Inlet
    X_min
    {
        type            zeroGradient;
    }

    // Outlet
    X_max
    {
        type            fixedValue;
        value           $internalField;
    }

    // Wall
    Y_max
    {
        type            symmetryPlane;
    }

    // Plate
    Y_min
    {
        type            zeroGradient;
    }

    "(Z_min|Z_max)"
    {
        type            empty;
    }
}


// ************************************************************************* //
