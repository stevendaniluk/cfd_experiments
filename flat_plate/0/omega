FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0";
    object      omega;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 -1 0 0 0 0];

#include        "$FOAM_CASE/include/initialConditions"

internalField   uniform $turb_omega;

boundaryField
{
    // Inlet
    X_min
    {
        type            fixedValue;
        value           $internalField;
    }

    // Outlet
    X_max
    {
        type            zeroGradient;
    }

    // Wall
    Y_max
    {
        type            symmetryPlane;
    }

    // Plate
    Y_min
    {
        type            omegaWallFunction;
        blended         true;
        value           $internalField;
    }

    "(Z_min|Z_max)"
    {
        type            empty;
    }
}

// ************************************************************************* //
