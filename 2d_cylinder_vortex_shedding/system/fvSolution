#include        "$FOAM_CASE/include/initialConditions"

solvers
{
    p
    {
        solver          GAMG;
        smoother        GaussSeidel;
        tolerance       1e-06;
        relTol          1e-2;
    }
    pFinal
    {
        $p;
        relTol         0;
    }

    U
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-06;
        relTol          1e-2;
    }
    UFinal
    {
        $U;
        relTol          0;
    }
}

#if $transient
    PIMPLE
    {
        nCorrectors                 2;
        nOuterCorrectors            1;
        nNonOrthogonalCorrectors    3;

        pRefCell                    0;
        pRefValue                   0;
    }
#else
    SIMPLE
    {
        nNonOrthogonalCorrectors    1;

        pRefCell                    0;
        pRefValue                   0;
    }
#endif

#if $transient
    relaxationFactors
    {
